<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
	<!-- https://blog.csdn.net/inke88/article/details/75007649 -->

	<contextName>logback</contextName>
	
	<!-- 输出到控制台 -->
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>DEBUG</level>
			<!--
			<level>INFO</level>
			-->
		</filter>
		<encoder>
			<pattern>[acgist-api] %d{YYYY-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<!-- 按天生成日志 -->
	<appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>E:/tmp/acgist-api.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>E:/tmp/%d{yyyy-MM-dd}/%d{yyyy-MM-dd}.log</FileNamePattern>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>[acgist-api] %d{YYYY-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</Pattern>
		</layout>
	</appender>
	
	<root level="DEBUG">
		<appender-ref ref="file" />
		<appender-ref ref="console" />
	</root>
	
</configuration>